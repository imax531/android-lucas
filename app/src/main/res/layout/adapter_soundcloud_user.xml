<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical" android:background="#fffafafa" android:elevation="7dp"
    android:id="@+id/outerLayout" android:animateLayoutChanges="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/innerLayout"
        android:background="#fffafafa"
        android:elevation="7dp">
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@color/colorAccent"
            android:id="@+id/ivSoundcloudUserRowProfile"
            android:src="@drawable/default_profile"
            android:contentDescription="User avatar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/tvSoundcloudUserRowUsername"
            android:layout_margin="10dp"
            android:layout_gravity="center" />
    </LinearLayout>

</LinearLayout>